script(type="text/x-template")#skills-row
   div(:class="`skills-row__` + `${skill.skillsGroup}`")
      h3.skills-row__title {{skill.skillsGroup}}
      ul.skills-row__list
         li.skills-row__item(v-for="(skillVolume, skillName) in skill.skills" :style="`background: conic-gradient(from -90deg, #9300e8, #4a00ed ${skillVolume}%, transparent ${skillVolume}%)`")
            .skills-row__item-block
               .skills-row__item-name {{skillName}}